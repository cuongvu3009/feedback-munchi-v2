// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// Define your Feedback model
model Feedback {
  id           Int        @id @default(autoincrement())
  emoji        String        
  businessSlug String
  comment      String?
  tags         String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Define a foreign key relationship to the Type model
  type         Type       
}

// Define your Type model to represent feedback types
enum Type {
  SERVICE
  ORDER
}



